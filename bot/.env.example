# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Получить токен: @BotFather в Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Ваш Telegram ID (для получения уведомлений)
# Получить ID: @userinfobot в Telegram
ADMIN_TELEGRAM_ID=123456789

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Путь к JSON файлу с Service Account
# Скачать: Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# ========================================
# GOOGLE CALENDAR CONFIGURATION
# ========================================
# Путь к JSON файлу с OAuth credentials
# Получить: Google Cloud Console → APIs & Services → Credentials
GOOGLE_CALENDAR_CREDENTIALS_PATH=./google-calendar-credentials.json

# ID вашего Google Calendar
# Найти: Google Calendar → Settings → Settings for my calendars → Integrate calendar
GOOGLE_CALENDAR_ID=your-email@gmail.com

# ========================================
# BOOKING SETTINGS
# ========================================
# Часовой пояс
TIMEZONE=Europe/Moscow

# Рабочие часы (24-часовой формат)
WORK_START_HOUR=9
WORK_END_HOUR=18

# Длительность слота в минутах
SLOT_DURATION=60

# Буфер между встречами в минутах
BUFFER_TIME=0

# ========================================
# SERVICES (УСЛУГИ)
# ========================================
# Название основной услуги
SERVICE_NAME=Персональная тренировка
SERVICE_PRICE=2500
SERVICE_DURATION=60
